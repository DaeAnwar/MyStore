@model IEnumerable<MyStore.Models.report>

@{
    ViewData["Title"] = "customerreport";
}

<h1>customerreport</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method ="get" asp-action="Index">
    <p>
        <input type="search" placehoder="enter user name"value="@ViewData["GetUserAccountsfiltred"]" name="Search" syle ="width:500px;"/>
        <input type="submit" value ="Search" class="btn btn-primary"/>

    </p>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td> 
                <a asp-action="customerOrders" asp-route-id="@item.Id">Details</a> 

            </td>
        </tr>
}
    </tbody>
</table>
